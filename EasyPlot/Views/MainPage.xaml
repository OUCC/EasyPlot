<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:view_models="clr-namespace:EasyPlot.ViewModels"
             x:Class="EasyPlot.MainPage">
    <ContentPage.BindingContext>
        <view_models:MainViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <Style x:Key="MainEntryStyle"
               TargetType="Entry">
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HeightRequest" Value="35" />
            <Setter Property="MinimumHeightRequest" Value="35" />
        </Style>
        <FileImageSourceConverter x:Key="FISConverter" />
    </ContentPage.Resources>

    <Grid ColumnDefinitions="1*, 1*"
          ColumnSpacing="20"
          Padding="10">
        <Grid RowDefinitions="50,80,*">
            <Label Text="{Binding Title}"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="Large"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <!-- タブ -->
            <ScrollView Grid.Row="1"
                        Orientation="Horizontal">
                <HorizontalStackLayout Margin="0,0,0,10">
                    <Border StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10,10,0,0" />
                        </Border.StrokeShape>
                        <Button Text="Whole Settings" 
                                Command="{Binding WholeSettingCommand}"
                                TextColor="Black"
                                BackgroundColor="{Binding WholeSettingColor}"
                                MinimumHeightRequest="40"
                                MaximumHeightRequest="40"
                                VerticalOptions="Center"
                                CornerRadius="0"/>
                    </Border>
                    <CollectionView x:Name="TabCollection"
                                    ItemsSource="{Binding GraphGroups}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal"
                                               ItemSpacing="1"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="118,28">
                                    <Border StrokeThickness="0"
                                            HorizontalOptions="Center">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10,0,0,0" />
                                        </Border.StrokeShape>
                                        <Button Text="{Binding GroupTitle}" 
                                                Command="{Binding Source={x:Reference TabCollection}, Path=BindingContext.SelectGroupCommand}"
                                                CommandParameter="{Binding Id}"
                                                MinimumWidthRequest="120"
                                                WidthRequest="120"
                                                MaximumWidthRequest="120"
                                                MinimumHeightRequest="40"
                                                MaximumHeightRequest="40"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Center"
                                                LineBreakMode="TailTruncation"
                                                TextColor="Black"
                                                BackgroundColor="{Binding TabBackgroundColor}"
                                                CornerRadius="0"/>
                                    </Border>
                                    <Border Grid.Column="1"
                                            StrokeThickness="0"
                                            HorizontalOptions="Center">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="00,10,0,0" />
                                        </Border.StrokeShape>
                                        <Button
                                                Text="X"
                                                Command="{Binding Source={x:Reference TabCollection}, Path=BindingContext.RemoveGroupCommand}"
                                                CommandParameter="{Binding Id}"
                                                MinimumWidthRequest="30"
                                                WidthRequest="30"
                                                MaximumWidthRequest="30"
                                                MinimumHeightRequest="40"
                                                MaximumHeightRequest="40"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Center"
                                                Margin="0,0,0,0"
                                                TextColor="Black"
                                                BackgroundColor="{Binding TabBackgroundColor}"
                                                CornerRadius="0" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Border StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10,10,0,0" />
                        </Border.StrokeShape>
                        <Button Text="＋" 
                                Command="{Binding AddGroupCommand}"
                                TextColor="Black"
                                BackgroundColor="LightGray"
                                FontAttributes="Bold"
                                MinimumHeightRequest="40"
                                MaximumHeightRequest="40"
                                VerticalOptions="Center"
                                CornerRadius="0"/>
                    </Border>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- 全体設定　-->
            <CollectionView Grid.Row="2"
                            ItemsSource="{Binding WholeSettinsEnumerable}"
                            IsVisible="{Binding IsWholeSetting}" >
                <CollectionView.EmptyViewTemplate>
                    <DataTemplate>
                        <Label Text="Empty"/>
                    </DataTemplate>
                </CollectionView.EmptyViewTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="40, 1*, 3*"
                      RowDefinitions="*, *, *, *, *, *, *"
                              Padding="15,0,15,0">
                            <CheckBox IsChecked="{Binding Title.Enabled}" 
                              VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                           Text="Title"
                           VerticalOptions="Center" />
                            <Entry Grid.Column="2"
                           Text="{Binding Title.Value}"
                           BackgroundColor="{Binding Title.BackGroundColor}" 
                           VerticalOptions="Center" 
                           HeightRequest="35" 
                           MinimumHeightRequest="35" />

                            <CheckBox Grid.Row="1"
                              IsChecked="{Binding XLabel.Enabled}" 
                              VerticalOptions="Center"/>
                            <Label Grid.Row="1" Grid.Column="1"
                           Text="X Label"
                           VerticalOptions="Center" />
                            <Entry Grid.Row="1" Grid.Column="2"
                           Text="{Binding XLabel.Value}"
                           BackgroundColor="{Binding XLabel.BackGroundColor}" 
                           VerticalOptions="Center" 
                           HeightRequest="35" 
                           MinimumHeightRequest="35" />

                            <CheckBox Grid.Row="2"
                              IsChecked="{Binding YLabel.Enabled}" 
                              VerticalOptions="Center"/>
                            <Label Grid.Row="2" Grid.Column="1"
                           Text="Y Label"
                           VerticalOptions="Center" />
                            <Entry Grid.Row="2" Grid.Column="2"
                           Text="{Binding YLabel.Value}"
                           BackgroundColor="{Binding YLabel.BackGroundColor}" 
                           VerticalOptions="Center" 
                           HeightRequest="35" 
                           MinimumHeightRequest="35" />

                            <CheckBox Grid.Row="3"
                              IsChecked="{Binding XRange.Enabled}" 
                              VerticalOptions="Center"/>
                            <Label Grid.Row="3" Grid.Column="1"
                           Text="X Range"
                           VerticalOptions="Center" />
                            <Grid Grid.Row="3" Grid.Column="2"
                          ColumnDefinitions="*, 15, *">
                                <Entry Text="{Binding XRange.Start}"
                               BackgroundColor="{Binding XRange.BackGroundColor}"
                               HeightRequest="35"
                               MinimumHeightRequest="35"/>
                                <Label Grid.Column="1"
                               Text="~" 
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
                                <Entry Grid.Column="2"
                               Text="{Binding XRange.End}"
                               BackgroundColor="{Binding XRange.BackGroundColor}"
                               HeightRequest="35"
                               MinimumHeightRequest="35" />
                            </Grid>

                            <CheckBox Grid.Row="4"
                              IsChecked="{Binding YRange.Enabled}" 
                              VerticalOptions="Center"/>
                            <Label Grid.Row="4" Grid.Column="1"
                           Text="Y Range"
                           VerticalOptions="Center" />
                            <Grid Grid.Row="4" Grid.Column="2"
                          ColumnDefinitions="*, 15, *">
                                <Entry Text="{Binding YRange.Start}"
                               BackgroundColor="{Binding YRange.BackGroundColor}"
                               HeightRequest="35"
                               MinimumHeightRequest="35"/>
                                <Label Grid.Column="1"
                               Text="~" 
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
                                <Entry Grid.Column="2"
                               Text="{Binding YRange.End}"
                               BackgroundColor="{Binding YRange.BackGroundColor}"
                               HeightRequest="35"
                               MinimumHeightRequest="35" />
                            </Grid>

                            <Label Grid.Row="5" Grid.Column="1"
                           Text="Log Scale" 
                           VerticalOptions="Center" />
                            <HorizontalStackLayout Grid.Row="5" Grid.Column="2" >
                                <CheckBox IsChecked="{Binding EnabledXLogscale}"
                                  VerticalOptions="Center" />
                                <Label Text="X"
                               VerticalOptions="Center" 
                               Margin="0,0,40,0"/>
                                <CheckBox IsChecked="{Binding EnabledYLogscale}"
                                  VerticalOptions="Center" />
                                <Label Text="Y"
                               VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <CheckBox Grid.Row="6"
                              IsChecked="{Binding Sampling.Enabled}" 
                              VerticalOptions="Center"/>
                            <Label Grid.Row="6" Grid.Column="1"
                           Text="Sampling"
                           VerticalOptions="Center" />
                            <Entry Grid.Row="6" Grid.Column="2"
                           Text="{Binding Sampling.Value}"
                           BackgroundColor="{Binding Sampling.BackGroundColor}" 
                           VerticalOptions="Center" 
                           HeightRequest="35" 
                           MinimumHeightRequest="35" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- グラフ設定 -->
            <Grid Grid.Row="2"
                  RowDefinitions="280,*"
                  IsVisible="{Binding IsGraphSetting}">
                <Grid RowDefinitions="*,*,*,*,*,*,*,*"
                      ColumnDefinitions="40,40,1*,4*">
                    <Grid Grid.ColumnSpan="4"
                          ColumnDefinitions="2*,4*,1*">
                        <Label Text="Title" 
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                        <Entry Grid.Column="1"
                           Text="{Binding SelectedGroup.GroupTitle}" 
                           Style="{StaticResource MainEntryStyle}"/>
                        <Button Grid.Column="2" 
                            Text="Add Graph" 
                            WidthRequest="100" 
                            MinimumHeightRequest="35"
                            MaximumHeightRequest="35"
                            VerticalOptions="Center"
                            Command="{Binding AddGraphSettingCommand}"/>
                    </Grid>

                    <CheckBox Grid.Row="1"
                              IsChecked="{Binding SelectedGroup.IsWithLines}"
                              VerticalOptions="Center" />
                    <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4"
                           Text="With Lines"
                           VerticalOptions="Center"/>

                    <CheckBox Grid.Row="2" Grid.Column="1"
                              IsEnabled="{Binding SelectedGroup.IsWithLines}"
                              IsChecked="{Binding SelectedGroup.LineWidth.Enabled}"
                              VerticalOptions="Center" />
                    <Label Grid.Row="2" Grid.Column="2"
                           Text="Line Width"
                           VerticalOptions="Center"/>
                    <Entry Grid.Row="2" Grid.Column="3"
                              IsEnabled="{Binding SelectedGroup.IsWithLines}"
                           Text="{Binding SelectedGroup.LineWidth.Value}" 
                           BackgroundColor="{Binding SelectedGroup.LineWidth.BackGroundColor}" 
                           Style="{StaticResource MainEntryStyle}"/>

                    <CheckBox Grid.Row="3" Grid.Column="1"
                              IsEnabled="{Binding SelectedGroup.IsWithLines}"
                              IsChecked="{Binding SelectedGroup.LineType.Enabled}"
                              VerticalOptions="Center" />
                    <Label Grid.Row="3" Grid.Column="2"
                           Text="Line Type"
                           VerticalOptions="Center"/>
                    <Entry Grid.Row="3" Grid.Column="3"
                              IsEnabled="{Binding SelectedGroup.IsWithLines}"
                           Text="{Binding SelectedGroup.LineType.Value}" 
                           BackgroundColor="{Binding SelectedGroup.LineType.BackGroundColor}" 
                           Style="{StaticResource MainEntryStyle}"/>

                    <CheckBox Grid.Row="4"
                              IsChecked="{Binding SelectedGroup.IsWithPoints}"
                           VerticalOptions="Center" />
                    <Label Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4"
                           Text="With Points" 
                           VerticalOptions="Center" />

                    <CheckBox Grid.Row="5" Grid.Column="1"
                              IsEnabled="{Binding SelectedGroup.IsWithPoints}"
                              IsChecked="{Binding SelectedGroup.PointsSize.Enabled}"
                              VerticalOptions="Center" />
                    <Label Grid.Row="5" Grid.Column="2"
                           Text="Point Size"
                           VerticalOptions="Center"/>
                    <Entry Grid.Row="5" Grid.Column="3"
                           IsEnabled="{Binding SelectedGroup.IsWithPoints}"
                           Text="{Binding SelectedGroup.PointsSize.Value}" 
                           BackgroundColor="{Binding SelectedGroup.PointsSize.BackGroundColor}" 
                           Style="{StaticResource MainEntryStyle}"/>

                    <CheckBox Grid.Row="6" Grid.Column="1"
                              IsEnabled="{Binding SelectedGroup.IsWithPoints}"
                              IsChecked="{Binding SelectedGroup.PointsType.Enabled}"
                              VerticalOptions="Center" />
                    <Label Grid.Row="6" Grid.Column="2"
                           Text="Point Type"
                           VerticalOptions="Center"/>
                    <Entry Grid.Row="6" Grid.Column="3"
                              IsEnabled="{Binding SelectedGroup.IsWithPoints}"
                           Text="{Binding SelectedGroup.PointsType.Value}" 
                           BackgroundColor="{Binding SelectedGroup.PointsType.BackGroundColor}" 
                           Style="{StaticResource MainEntryStyle}"/>
                </Grid>

                <CollectionView Grid.Row="1"
                                x:Name="GraphCollection"
                                ItemsSource="{Binding SelectedGroup.Settings}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical"
                                           ItemSpacing="3"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="5" />
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="40, 1*, 3*"
                                      RowDefinitions="*,*,*,*">
                                    <CheckBox IsChecked="{Binding Title.Enabled}" 
                                              VerticalOptions="Center"/>
                                    <Label Grid.Column="1"
                                           Text="Title"
                                           VerticalOptions="Center" />
                                    <Grid Grid.Column="2" 
                                          ColumnDefinitions="*,50">
                                        <Entry
                                           Text="{Binding Title.Value}"
                                           BackgroundColor="{Binding Title.BackGroundColor}" 
                                           Style="{StaticResource MainEntryStyle}"/>
                                        <Button Grid.Column="1" 
                                                Text="X" 
                                                BackgroundColor="Gray"
                                                MaximumHeightRequest="40"
                                                MinimumHeightRequest="40"
                                                MaximumWidthRequest="40"
                                                MinimumWidthRequest="40"
                                                VerticalOptions="Center"
                                                Command="{Binding Source={x:Reference GraphCollection}, Path=BindingContext.RemoveGraphSettingCommand}"
                                                CommandParameter="{Binding Id}"/>
                                    </Grid>

                                    <RadioButton Grid.Row="1" Grid.ColumnSpan="2"
                                             Content="Function"
                                             IsChecked="{Binding IsFunction}" />
                                    <Entry Grid.Row="1" Grid.Column="2"
                                       Text="{Binding FunctionText}"
                                       BackgroundColor="{Binding FunctionBackgroundColor}"    
                                       Style="{StaticResource MainEntryStyle}" />

                                    <RadioButton Grid.Row="2" Grid.ColumnSpan="2"
                                             Content="Data File" />
                                    <Grid Grid.Row="2" Grid.Column="2" 
                                          ColumnDefinitions="*,50">
                                        <Label Text="{Binding DataFileName}"
                                           LineBreakMode="TailTruncation" 
                                           VerticalOptions="Center"/>
                                        <Button Grid.Column="1" 
                                                Text="🗀" 
                                                IsEnabled="{Binding IsDataFile}"
                                                Command="{Binding OpenFilePickerCommand}"/>
                                    </Grid>


                                    <HorizontalStackLayout Grid.Row="3" Grid.Column="1">
                                        <CheckBox IsChecked="{Binding UsingRange.Enabled}"
                                              IsEnabled="{Binding IsDataFile}"
                                              VerticalOptions="Center"/>
                                        <Label Text="Using"
                                           VerticalOptions="Center" />
                                    </HorizontalStackLayout>
                                    <Grid Grid.Row="3" Grid.Column="2"
                                      ColumnDefinitions="*,15,*">
                                        <Entry Text="{Binding UsingRange.Start}"
                                           IsEnabled="{Binding IsDataFile}"
                                           BackgroundColor="{Binding UsingRange.BackGroundColor}" 
                                           Style="{StaticResource MainEntryStyle}" />
                                        <Label Grid.Column="1"
                                           Text=":"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center" />
                                        <Entry Grid.Column="2"
                                           Text="{Binding UsingRange.End}"
                                           IsEnabled="{Binding IsDataFile}"
                                           BackgroundColor="{Binding UsingRange.BackGroundColor}" 
                                           Style="{StaticResource MainEntryStyle}" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Grid>

        <Grid Grid.Column="1"
              RowDefinitions="*, 80">
            <Image IsVisible="{Binding IsGenerateSuccess}"
                   Source="{Binding ResultImage}" />
            <Button Grid.Row="2"
                    Text="Save Image"
                    MaximumWidthRequest="200"
                    MaximumHeightRequest="50"
                    HorizontalOptions="Center"
                    Command="{Binding SaveImageCommand}" />
        </Grid>
    </Grid>
</ContentPage>
